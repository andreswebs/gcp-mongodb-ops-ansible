storage:
  dbPath: /mnt/secure/mongodb
  journal:
    enabled: true
  engine: wiredTiger
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
  logRotate: reopen
net:
  port: 27017
  bindIp: 0.0.0.0
  tls:
    mode: requireTLS
    certificateKeyFile: /home/www/tls/wildcard.planhat.dev.pem
    certificateKeyFilePassword: {{ pemkeypassword.stdout }}
    CAFile: /home/www/tls/ca.crt
processManagement:
  fork: false
security:
  authorization: enabled
  clusterAuthMode: x509
replication:
  replSetName: "{{ mongodb_replica_set }}"
