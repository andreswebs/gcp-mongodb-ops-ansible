storage:
  dbPath: {{ mongodb_storage_path }}
  journal:
    enabled: true
  engine: wiredTiger
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log
  logRotate: reopen
net:
  port: 27017
  bindIp: 0.0.0.0
  tls:
    mode: requireTLS
    certificateKeyFile: {{ mongodb_tls_dir }}/wildcard.planhat.dev.pem
    certificateKeyFilePassword: {{ mongodb_tls_keypassword.stdout }}
    CAFile: {{ mongodb_tls_dir }}/ca.crt
processManagement:
  fork: false
security:
  authorization: enabled
  clusterAuthMode: x509
replication:
  replSetName: {{ mongodb_replica_set }}
